<nav> <%= link_to "Back to Homepage", "/", :class => 'btn btn-default' %></nav>

<article id="category">
  <%- model_class = Category -%>
	<div class="page-header">
	  <h1><%= @category.name %></h1>
	</div>
	<header class="total_displayed">
		Viewing Products <%= "#{@offset + 1} to #{@offset + @products.count}, of #{@category.products.count}" %> products in this category.
	</header>
	
	<%= render 'products/grid_view' %>

	<% if @page > 1 %>
  	<nav id="previous"><%= link_to 'Previous page', page: @page - 1 %></nav>
  <% end %>
  <% unless @final_page %>
  	<nav id="next"><%= link_to 'Next page', page: @page + 1 %></nav>
  <% end %>

</article>
