<%= form_for(@review, remote: !!@product, :html => { :class => "form-horizontal product" }) do |f| %>
  <% if @review.errors.any? %>
    <%= render 'review_errors' %>
  <% end %>

  <div class="field">
    <%= f.label :comment, :class => 'control-label' %><br>
    <%= f.text_area :comment, :class => 'form-control' %>
  </div>
  <% if @product.nil? %>
    <div class="field">
      <%= f.label :product_id, :class => 'control-label' %><br>
      <%= f.text_field :product_id, :class => 'form-control' %>
    </div>
  <% else %>
    <%= f.hidden_field :product_id, value: @product.id %>
  <% end %>
      <div class="field">
      <%= f.label :rating, :class => 'control-label' %><br>
      <%= f.text_field :rating, :class => 'form-control' %>
    </div>

  <div class="actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
  </div>
<% end %>
