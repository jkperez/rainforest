<%= form_for(@review, remote: !!@product) do |f| %>
  <% if @review.errors.any? %>
    <%= render 'review_errors' %>
  <% end %>

  <div class="field">
    <%= f.label :comment %><br>
    <%= f.text_area :comment %>
  </div>
  <% if @product.nil? %>
    <div class="field">
      <%= f.label :product_id %><br>
      <%= f.text_field :product_id %>
    </div>
  <% else %>
    <%= f.hidden_field :product_id, value: @product.id %>
  <% end %>
      <div class="field">
      <%= f.label :rating %><br>
      <%= f.text_field :rating %>
    </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
