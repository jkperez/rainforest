<nav>
	<%= link_to "Back to Homepage", "/", :class => 'btn btn-default' %><br>
	<%= link_to "New Product", new_product_path, :class => 'btn btn-primary' %>
</nav>

<%- model_class = Product -%>
<article>
  <h1>Viewing Products <%= "#{@offset + 1} to #{@offset + @products.count}" %></h1>
  
  <%= render 'grid_view' %>

  <% if @page > 1 %>
  	<nav id="previous"><%= link_to 'Previous page', page: @page - 1 %></nav>
  <% end %>
  <% unless @final_page %>
  	<nav id="next"><%= link_to 'Next page', page: @page + 1 %></nav>
  <% end %>

</article>