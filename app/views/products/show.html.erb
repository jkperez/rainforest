<nav> <%= link_to "Back to #{@product.category.name}", category_path(@product.category), :class => 'btn btn-default' %></nav>

<article id="product">
  <%- model_class = Product -%>


 

  <dl class="dl-horizontal">
    <dt></dt>
    <dd><%= @product.image %></dd> <br>
    <dt><strong><%= model_class.human_attribute_name(:description) %>:</strong></dt>
    <dd><%= @product.description %></dd> <br>
    <dt><strong><%= model_class.human_attribute_name(:category) %>:</strong></dt>
    <dd><%= @product.category.name %></dd> <br>
    <dt><strong>Price:</strong></dt>
    <dd><%= @product.formatted_price %></dd>
    <dd> <%= link_to t('.edit', :default => t("helpers.links.edit")),
                edit_product_path(@product), :class => 'btn btn-default' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                product_path(@product),
                :method => 'delete',
                :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                :class => 'btn btn-danger' %></dd>
  </dl>

  <div id="reviews">
    <h3>Reviews</h3>
    <% @product.reviews.each do |review| %>
      <%= render partial: 'reviews/inline_review', locals: { review: review } %>
    <% end %>
  </div>

  <div id="new_review">
    <h3>New Review</h3>
    <div id="errors"></div>
    <%= render 'reviews/form' %>
  </div>
</article>